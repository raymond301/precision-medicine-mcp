# ============================================================================
# STUDENT APP ENVIRONMENT CONFIGURATION
# ============================================================================
# This app has safety guardrails to prevent accidental runaway costs

# LLM Provider API Keys
# Instructor will provide these keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Environment Settings
ENVIRONMENT=student

# Student Mode (REQUIRED - enables safety limits)
# When true: Enforces per-session limits on tokens and requests
# DO NOT SET TO FALSE - this prevents accidental costs
STUDENT_MODE=true

# MCP Server Mode
# Week 1-2: Use mock mode (free practice)
USE_MOCK_MCP=true
# Week 3+: Switch to real mode (with safety limits)
# USE_MOCK_MCP=false

# Safety Limits (configured in app.py - DO NOT override)
# - Max 4,096 tokens per request
# - Max 50,000 tokens per session (~$1.50)
# - Max 50 requests per session
# To reset: Clear conversation or refresh page

# Optional: Model Selection
# DEFAULT_MODEL=claude-sonnet-4-5
# DEFAULT_MAX_TOKENS=4096
