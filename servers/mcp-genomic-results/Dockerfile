FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create directory structure
RUN mkdir -p /app/servers/mcp-genomic-results /app/shared/utils

# Copy temporarily staged shared utilities
COPY _shared_temp/utils/ /app/shared/utils/

# Copy server code
COPY . /app/servers/mcp-genomic-results/

# Install Python dependencies
WORKDIR /app/servers/mcp-genomic-results
RUN pip install --no-cache-dir -e .

# Set environment variables for SSE transport
ENV MCP_TRANSPORT=sse
ENV MCP_PORT=3012
ENV PYTHONPATH=/app/shared/utils:${PYTHONPATH}
ENV GENOMIC_RESULTS_DRY_RUN=false

# Expose port
EXPOSE 3012

# Run the server
CMD ["python", "-m", "mcp_genomic_results"]
